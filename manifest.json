{
    "manifest_version": 3,
    "name": "News Credibility Risk Engine",
    "version": "0.1.0",
    "description": "Assesses information risk, speculative framing, and decision-making risk using a local LLM.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {},
    "background": {
        "service_worker": "src/background.js",
        "type": "module"
    },
    "host_permissions": [
        "http://localhost:11434/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/utils/extractor.js",
                "src/utils/ui.js",
                "src/content.js"
            ],
            "css": [
                "src/ui/styles.css"
            ]
        }
    ]
}